#!/usr/bin/env bash

function start() {
  echo "Starting CL application"
  if [ -e "${OPENSHIFT_ROSWELL_DIR}/bin/ros" ] ; then
    PATH=${OPENSHIFT_ROSWELL_DIR}/sbin:$PATH nginx
    cd ${OPENSHIFT_REPO_DIR}
    PATH=${OPENSHIFT_ROSWELL_DIR}/bin:$PATH HOME=${OPENSHIFT_ROSWELL_DIR}/home ./bootstrap.ros >> ${OPENSHIFT_ROSWELL_DIR}/log/roswell-cartridge.log &
    echo $! > ${OPENSHIFT_ROSWELL_DIR}/roswell.pid
  fi
  return 0
}

function stop() {
  pid=`cat ${OPENSHIFT_ROSWELL_DIR}/roswell.pid`
  kill -0 $pid && kill -15 $pid
  pkill -f nginx
  pkill -f ros
  return 0
}

function status(){
  pid=`cat ${OPENSHIFT_ROSWELL_DIR}/roswell.pid`
  return `kill -0 $pid`
}

function restart(){
  if [ -e "${OPENSHIFT_ROSWELL_DIR}/bin/ros" ] ; then
    stop
    start
    return 0
  else
    nohup $OPENSHIFT_ROSWELL_DIR/bin/setup &
    return 1
  fi
}

function update() {
  return 0
}

function tidy() {
  return 0
}

function build() {
  return 0
}

function pre-build(){
 return 0
}

function post-deploy(){
  return 0
}

if ! [ $# -gt 0 ]; then
  echo "Usage: $0 [start|restart|graceful|graceful-stop|stop|status|update]"
  exit 1
fi

case "$1" in
  start) start ;;
  restart|graceful) restart ;;
  graceful-stop|stop) stop ;;
  status) status ;;
  build) build ;;
  pre-build) pre-build ;;
  post-deploy) post-deploy ;;
  tidy) tidy ;;
  update) update ;;
  *)
esac
